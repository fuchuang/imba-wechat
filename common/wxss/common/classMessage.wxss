  background: url('https://www.gdutrex.xyz/imba/common/signin.png') no-repeat;
  background-size: 100% 100%;
}
.singinMessageBG{
  width:450rpx;
  height: 400rpx;
  margin-left: 100rpx;
  background: white;
  border:solid 1px #37FABE;
