/* 班群内容 */
.moreMessage{
  width:  650rpx;
  background: #37FABE;
  border-radius: 20rpx;
  position: absolute;
  left: 50rpx;
  height: auto;
}
.moreMessageContain{
  width:  650rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  background: white;
}
.treeBtn{
  width: 68rpx;
  height: 68rpx;
  background: url('https://www.gdutrex.xyz/imba/common/treebtn.png') no-repeat;
  background-size: 100% 100%;
  margin-left: 20rpx;
}
/* 按钮的上面的按钮 */
.messageLogo{
  width: 48rpx;
  height: 48rpx;
  background: url('https://www.gdutrex.xyz/imba/common/messageLogo.png') no-repeat;
  background-size: 100% 100%;
  margin-right: 20rpx;
}
.messageLogoNums{
  width: 38rpx;
  height: 38rpx;
  background: url('https://www.gdutrex.xyz/imba/common/messageNum.png') no-repeat;
  background-size: 100% 100%;
  color:white;
  position: relative;
  left:-24rpx;
  top:-24rpx;
  font-size: x-small;
}
