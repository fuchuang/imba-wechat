<view class='mainBG' hidden='{{pageControll.messageGrade}}'/>
<view class='moreMessage' style='top:{{gradeCardTop+50}}rpx;'>
  <view class='moreMessageContain flexColumn' 
  style='height:{{noticeHeight-150}}rpx;margin-top:150rpx;' 
  ></view>
</view>
<view 
  class="flexColumn MCC_contain" 
  style="top:{{gradeCardTop+80}}rpx;">
  <view style="" class='flexColumn MCC_contain_bg'>
    <view wx:for='{{chooseClassDetail.content}}' 
    wx:for-item='item'
    class="flexRow MCC_contain_classContain" 
    wx:key = 'classContain'>
      <view  style="" class="MCC_contain_classTitle">{{item.name}}:</view>
      <view style='' class="MCC_contain_classCntain">{{item.value}}</view>
    </view>
    <view style="" class="flexRow MCC_contain_classBtn">
      <view class="MCC_contain_classBtnSize" style='background:url("https://www.gdutrex.xyz/imba/MCC_saveOff.png") no-repeat;background-size:100% 100%;'></view>
      <view class="MCC_contain_classBtnSize" style='background:url("https://www.gdutrex.xyz/imba/MCC_zanOff.png") no-repeat;background-size:100% 100%;'></view>
    </view>
  </view>
   <scroll-view style="margin-top:20rpx;height:{{windowHeight*0.3}}px;" class='flexColumn MCC_contain_bg' scroll-y>
      <view wx:for='{{chooseClassDetail.comment}}' class="flexRow"  wx:for-item='item'
      style="margin:0 20rpx;width:100%;align-items: center;  justify-content: space-around;" wx:key='peopleCommon'>
        <view  style='width:100rpx;height:100rpx;border-radius: 50rpx;background:url("{{item.imageUrl}}") no-repeat;background-size:100% 100%;'></view>
        <view class='flexColumn' style="width:400rpx;margin:20rpx;">
          <text style='font-size:large;'>{{item.name}}</text>
          <text style='font-size:medium;color:#A6A6A6;'>{{item.content}}</text>
          <text style='font-size:small;color:#A6A6A6;font-weight:200;border-bottom:1px #a6a6a6 solid;'>{{item.time}}</text>
        </view>
      </view>
   </scroll-view>
   <view  style='height:100rpx;margin-top:50rpx;align-items: center;justify-content: center;font-size:medium;color:#a7a7a7;' class=' MCC_contain_bg flexRow'>
    <text>发表评论</text>
    <view style='width:39rpx;height:30rpx;background:url("https://www.gdutrex.xyz/imba/MCC_write.png") no-repeat;background-size:100% 100%;'/>
   </view>
</view>