<!--发送弹幕-->
<view class='marsk' style='top:0px;' hidden='{{true}}'></view>
<view class='alert flexColumn' 
      style='left:75rpx;top:400rpx;height:500rpx;width:600rpx;background:url("https://www.gdutrex.xyz/imba/danmuBG.png") no-repeat;background-size: 100% 100%;' hidden='{{true}}'>
  <view style='width:100%;height:15%;color:white;' class='flexRow flexRowCenterAndAround'>
    <text style='width:88%;text-align:center;'>发消息</text>
    <view style='background:url("https://www.gdutrex.xyz/imba/close.png") no-repeat;background-size: 100% 100%;width:30rpx;height:30rpx;position:relative;' bindtap='closeTan' data-type ='sendDanMu'></view><view style='width:2%;'></view></view>
  <view style='flex:1;width:100%;'class='flexColumn flexRowCenterAndAround'>
    <view style='flex:1;width:100%;'></view>
    <view style='flex:16;width:80%;background:white;border-radius:20rpx;'>
      <textarea style='width:100%;height:100%;font-size:medium;' placeholder='输入弹幕内容'></textarea>
    </view>
    <view style='flex:4;width:100%;'>
      <view style='width:100%;height:30%;justify-content:space-around;' class='flexRow flexRowCenterAndAround'>
        <view class='flexRow flexRowCenterAndAround btnClass'  bindtap='closeTan' data-type ='sendDanMu'><text>取消</text></view>
        <view class='flexRow btnClass flexRowCenterAndAround'><text>确定</text></view>
      </view>
    </view>
  </view>
</view>